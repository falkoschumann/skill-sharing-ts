{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    // Emit
    "noEmit": true,
    // Interop Constraints
    "isolatedModules": true,
    // Language and Environment
    "moduleDetection": "force"
  },
  "include": ["vite.config.ts", "vitest.setup.ts"]
}
