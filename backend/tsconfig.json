{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Modules
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    // Emit
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    // Interop Constraints
    //"allowSyntheticDefaultImports": true,
    // Language and Environment
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // Projects
    "incremental": true
  }
}
