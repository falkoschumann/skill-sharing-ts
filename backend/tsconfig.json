{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Modules */
    "baseUrl": "./",
    "module": "commonjs",
    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* Language and Environment */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2023",
    /* Projects */
    "incremental": true
  }
}
