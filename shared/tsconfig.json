{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Modules
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    // Interop Constraints
    //"allowSyntheticDefaultImports": true,
    // Language and Environment
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // Projects
    "incremental": true
  },
  "include": ["src", "test"]
}
