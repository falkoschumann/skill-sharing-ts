{
  "compilerOptions": {
    // Type Checking
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    // Modules
    "module": "commonjs",
    // Emit
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    // Language and Environment
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    // Projects
    "incremental": true,
    // Completeness
    "skipLibCheck": true
  },
  "include": ["src"]
}
